---
import { ViewTransitions } from "astro:transitions"

interface Props {
  title: string
  description: string
  image?: string
}

const imageUrl = "./assets/images/logo.png"

const { title, description, image = imageUrl } = Astro.props
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <meta
      name="description"
      content={description}
    />
    <meta
      property="og:title"
      content={title}
    />
    <meta
      property="og:description"
      content={description}
    />
    <meta
      property="og:image"
      content={image}
    />
    <meta
      property="og:image:width"
      content="1200"
    />
    <meta
      property="og:image:height"
      content="630"
    />
    <meta
      property="og:type"
      content="website"
    />
    <title>{title}</title>
    <ViewTransitions />
  </head>

  <body class="bg-slate-950 text-slate-200">
    <main class="mb-10 max-w-5xl mx-auto p-2">
      <slot />
    </main>
  </body>
</html>
