---
import type { CollectionEntry } from "astro:content"
import { Image } from "astro:assets"

interface Props {
  author: CollectionEntry<"author">
}

const { author } = Astro.props

const { avatar, bio, github, linkedIn, name, subtitle, twitter } = author.data

const authorId = author.id
---

<div class="max-w-lg mx-auto bg-slate-900 rounded-lg shadow-md p-5">
  <Image
    src={avatar}
    alt="Profile picture"
    width="200"
    height="200"
    class="rounded-full mx-auto"
  />

  <h2 class="text-center text-2xl font-semibold mt-3">
    {name}
  </h2>

  <p class="text-center text-gray-400 mt-1">{subtitle}</p>

  <div class="flex justify-center mt-5">
    <a
      href={`https://twitter.com/${twitter}`}
      class="text-blue-500 hover:text-blue-700 mx-3"
    >
      @{twitter}
    </a>
    <a
      href={linkedIn}
      class="text-blue-500 hover:text-blue-700 mx-3"
    >
      LinkedIn
    </a>
    <a
      href={github}
      class="text-blue-500 hover:text-blue-700 mx-3"
    >
      GitHub
    </a>
  </div>

  <div class="mt-5">
    <h3 class="text-xl font-semibold">Bio</h3>
    <p class="text-gray-400 mt-2">{bio}</p>
    <div class="flex justify-end">
      <a href={`/blog/${authorId}`}>Leer m√°s</a>
    </div>
  </div>
</div>
