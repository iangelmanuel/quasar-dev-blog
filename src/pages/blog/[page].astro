---
import type { GetStaticPaths } from "astro"
// Type GetStaticPaths de Astro
import MainLayout from "@/layouts/MainLayout.astro"
import TypeBlogPost from "@/components/TypeBlogPost.astro"
import { getCollection } from "astro:content"

export const getStaticPaths = (async ({ paginate }) => {
  const blogPosts = await getCollection("blog")

  return paginate(blogPosts, { pageSize: 2 })
}) satisfies GetStaticPaths

const { page } = Astro.props
---

<MainLayout
  title="Blog"
  description="Blog de Quasar"
>
  <div class="py-10 mx-auto">
    <h1 class="text-3xl font-semibold capitalize lg:text-4xl text-white">
      Quasar's Blog paginado
    </h1>
  </div>

  <section
    aria-label="Entradas de blog"
    class="bg-gray-900 mb-10"
  >
    <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
      {page.data.map((post) => <TypeBlogPost post={post} />)}
    </div>
  </section>

  <section
    aria-label="Controles"
    class="flex justify-between"
  >
    <!--   page .. ?? prev   -->
    <a
      href={page.url.prev}
      class:list={{
        disabled: !page.url.prev
      }}
      >Anteriores</a
    >

    <!--   page .. ?? next   -->
    <a
      href={page.url.next}
      class:list={{
        disabled: !page.url.next
      }}
      >Siguientes</a
    >
  </section>
</MainLayout>

<style>
  a {
    @apply bg-blue-500 text-white p-2 rounded hover:bg-blue-600 cursor-pointer;
  }

  .disabled {
    @apply bg-gray-600 hover:bg-gray-600;
  }
</style>
