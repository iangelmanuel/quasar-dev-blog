---
import BlogPost from "../components/BlogPost.astro"
import { siteConfig } from "../config/site-config"
import MainLayout from "../layouts/BlogLayout.astro"

const posts = await Astro.glob("./posts-old/*.{md,mdx}")
---

<MainLayout
  title="Quasar Design - Astro"
  description="Blog about Astro"
>
  <section class="bg-white dark:bg-slate-950">
    <div class="container px-6 py-10 mx-auto">
      <h1
        class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-slate-200"
      >
        {siteConfig.title}
      </h1>

      <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
        {posts.map((post) => <BlogPost {...post} />)}
      </div>
    </div>
  </section>
</MainLayout>
